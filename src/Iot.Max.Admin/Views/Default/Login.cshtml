
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>后台管理系统</title>
    <link href="~/login/index.css" rel="stylesheet" />
    <link href="~/login/main.css" rel="stylesheet" />
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/js/request.js"></script>
    <script src="~/js/stroage.js"></script>
    <style>
        .box {
            z-index: 10000;
            position: absolute;
            top: 0;
            left: calc(50% - 244px);
        }

        .submit {
            height: 45px;
            background: #3277FC;
            border: none;
            color: #fff;
        }
    </style>
</head>
<body>
    <div class="bg-back"></div>
    <div class="cd-user-modal is-visible box">
        <!-- this is the entire modal form, including the background -->
        <div class="cd-user-modal-container">
            <ul class="cd-switcher">
                <li><a href="#0" class="selected">账号密码登录</a></li>
                <li><a href="#0" style="color: #dcdcdc;pointer-events: none;" disabled="disabled">验证码登录</a></li>
            </ul>
            <div id="cd-login" class="is-visible is-selected">
                <!-- log in form -->
                <form class="cd-form ">
                    <p class="fieldset">
                        <label class="image-replace cd-username" for="signup-username">账户名</label>
                        <input class="full-width has-padding has-border" id="txtName" type="phone" placeholder="请输入账户名">
                        <span class="cd-error-message">账户名错误</span>
                    </p>
                    <p class="fieldset">
                        <label class="image-replace cd-password" for="signup-password">密码</label>
                        <input class="full-width has-padding has-border" id="txtPass" type="password" placeholder="请输入密码">
                        <span class="cd-error-message">格式错误!</span>
                        <a style="
							display: inline-block;
							position: absolute;
							right: 0px;
							cursor:pointer;
							bottom: -22px;
							font-size: 14px;
							color: #3277fc;
                            display:none;">忘记密码?</a>
                    </p>
                    <p class="fieldset">
                        <input type="checkbox" id="remember-me" checked>
                        <label for="remember-me">记住密码</label>
                    </p>
                    <p class="fieldset">
                        <input class="full-width submit" style="background-color: #3277FC;" type="button" id="btnSubmit" value="登  录">
                        <input class="full-width has-padding submit" type="button" value="支付测试" id="btnTestPay">
                    </p>
                </form>
            </div> <!-- cd-login -->
            <div id="cd-signup">
                <!-- sign up form -->
                <form class="cd-form">
                    <p class="fieldset">
                        <label class="image-replace cd-username" for="signup-username">用户名</label>
                        <input class="full-width has-padding has-border" id="txtName2" type="text" placeholder="请输入手机号">
                        <span class="cd-error-message">格式错误!</span>
                    </p>

                    <p class="fieldset">
                        <label class="image-replace cd-password" for="signin-password">验证码</label>
                        <input class="full-width has-padding has-border" id="txtPass2" type="text" placeholder="验证码">
                        <button href="#0" class="hide-password">发送验证码</button>
                        <span class="cd-error-message">密码错误</span>

                    </p>
                    <p class="fieldset">
                        <input class="full-width has-padding" type="submit" value="登录">
                    </p>
                </form>

                <!-- <a href="#0" class="cd-close-form">Close</a> -->
            </div> <!-- cd-signup -->
        </div> <!-- cd-user-modal-container -->
        <p style="
		position: absolute;
    bottom: 6em;
    text-align: center;
    width: 100%;"> 上海爱谦科技有限公司 </p>
    </div> <!-- cd-user-modal -->

    <script>
        $('#btnTestPay').on('click', function () {
            $.get('http://localhost:56038/alipay/test', function (res) {
                console.log(res);
                $('body').append(res);
            })
        })

        $('#btnSubmit').on('click', function () {
            var name = $('#txtName').val();
            var pass = $('#txtPass').val();

            var data = {
                username: name,
                password: pass
            }

            if (name.length <= 0 || pass.length <= 0) {
                alert('用户名或密码不正确');
                return;
            }

            //var _request = new MyRequest(data);
            //_request.g('/sms/send/?phone=123456', function (res) {
            //    console.log(res);
            //})

            let storage = new Storage();
            storage.setItem('_userinfo', name, 5000);
            location.href = '/';
            
        })
    </script>
</body>
</html>

